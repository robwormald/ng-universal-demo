{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es6",
		"target": "es5",
		"noImplicitAny": false,
		"sourceMap": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"es6",
			"dom"
		],
		"outDir": "lib"
	},
	"include": [
		"src/**/*"
	],
	"angularCompilerOptions": {
		"genDir": "src/ngfactory",
		"entryModule": "./src/app.browser.module#AppBrowserModule"
	}
}